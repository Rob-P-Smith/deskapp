{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "platforms/electron/main/main.js",
    "electron/**/*.ts",
    "**/*.ts",
    "**/*.js"
  ]
}
